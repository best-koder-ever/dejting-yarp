{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "authRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "userRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/api/user/{**catch-all}"
        }
      },
      "swipeRoute": {
        "ClusterId": "swipeCluster",
        "Match": {
          "Path": "/api/swipes/{**catch-all}"
        }
      },
      "matchmakingRoute": {
        "ClusterId": "matchmakingCluster",
        "Match": {
          "Path": "/api/matchmaking/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "authService": {
            "Address": "http://auth-service:8081/"
          }
        }
      },
      "userCluster": {
        "Destinations": {
          "userService": {
            "Address": "http://user-service:8082/"
          }
        }
      },
      "swipeCluster": {
        "Destinations": {
          "swipeService": {
            "Address": "http://swipe-service:8083/"
          }
        }
      },
      "matchmakingCluster": {
        "Destinations": {
          "matchmakingService": {
            "Address": "http://matchmaking-service:8084/"
          }
        }
      }
    }
  }
}
