{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:8080"
      }
    }
  },
  "ReverseProxy": {
    "Routes": {
      "userRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/api/userprofiles/{**catch-all}"
        }
      },
      "swipeRoute": {
        "ClusterId": "swipeCluster",
        "Match": {
          "Path": "/api/swipes/{**catch-all}"
        }
      },
      "matchmakingRoute": {
        "ClusterId": "matchmakingCluster",
        "Match": {
          "Path": "/api/matchmaking/{**catch-all}"
        }
      },
      "photoRoute": {
        "ClusterId": "photoCluster",
        "Match": {
          "Path": "/api/photos/{**catch-all}"
        }
      },
      "messagingRoute": {
        "ClusterId": "messagingCluster",
        "Match": {
          "Path": "/api/messages/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "userCluster": {
        "Destinations": {
          "userService": {
            "Address": "http://user-service:8082/"
          }
        }
      },
      "swipeCluster": {
        "Destinations": {
          "swipeService": {
            "Address": "http://swipe-service:8087/"
          }
        }
      },
      "matchmakingCluster": {
        "Destinations": {
          "matchmakingService": {
            "Address": "http://matchmaking-service:8083/"
          }
        }
      },
      "photoCluster": {
        "Destinations": {
          "photoService": {
            "Address": "http://photo-service:8085/"
          }
        }
      },
      "messagingCluster": {
        "Destinations": {
          "messagingService": {
            "Address": "http://messaging-service:8086/"
          }
        }
      }
    }
  }
  ,
  "Authentication": {
    "Keycloak": {
      "Authority": "http://keycloak:8080/realms/DatingApp",
      "Audience": "yarp-gateway",
      "Audiences": [
        "yarp-gateway",
        "matchmaking-service",
        "photo-service",
        "messaging-service",
        "swipe-service"
      ],
      "RequireHttpsMetadata": false
    }
  }
}