{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:80"
      }
    }
  },
  "ReverseProxy": {
    "Routes": {
      "authRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "userRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/api/userprofiles/{**catch-all}"
        }
      },
      "matchmakingRoute": {
        "ClusterId": "matchmakingCluster",
        "Match": {
          "Path": "/api/matchmaking/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "authService": {
            "Address": "http://dating-auth-demo:80/"
          }
        }
      },
      "userCluster": {
        "Destinations": {
          "userService": {
            "Address": "http://dating-user-demo:80/"
          }
        }
      },
      "matchmakingCluster": {
        "Destinations": {
          "matchmakingService": {
            "Address": "http://dating-matchmaking-demo:80/"
          }
        }
      }
    }
  }
  ,
  "Authentication": {
    "Keycloak": {
      "Authority": "http://dating-keycloak-demo/realms/DatingApp",
      "Audience": "yarp-gateway",
      "Audiences": [
        "yarp-gateway",
        "auth-service",
        "matchmaking-service",
        "photo-service",
        "messaging-service",
        "swipe-service"
      ],
      "RequireHttpsMetadata": false
    }
  }
}
